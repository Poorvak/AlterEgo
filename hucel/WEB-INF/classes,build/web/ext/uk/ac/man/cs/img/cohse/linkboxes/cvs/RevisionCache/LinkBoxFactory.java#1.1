package uk.ac.man.cs.img.cohse.linkboxes;

/**
 * A simple factory class for initialising styles
 * @author Yeliz Yesilada
 */
public class LinkBoxFactory {
    
     /**
      *This will initialise appropriate link box
      *@param styleName Name of the style of the linkbox that will be created
      *@return LinkBox Initiliase style element
      **/
     public static LinkBox createLinkBoxStyle(String styleName){        
        if(styleName.equals("plain")){
            return new PlainLinkBox();
        }
        else if(styleName.equals("nested")){
            return new NestedLinkBox();
        }
        else if(styleName.equals("plain_accordion")){
            return new PlainLinkBoxAccordion();
        }
        else if(styleName.equals("nested_accordion")){
            return new NestedLinkBoxAccordion();
        }
        else if(styleName.equals("nested_spotlight")){
            return new NestedLinkBoxSpotlight();
        }
        else if(styleName.equals("plain_keywords")){
            return new PlainLinkBoxKeywords();
        }
        else{
            return new PlainLinkBox();
        }        
    }//createLinkBoxStyle
    
}
